<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
  <div class="filter">
    <%= form_tag posts_path, method: :get do %>
      <%= label_tag :location %>
      <%= text_field_tag :location %>
      <%= submit_tag "Search" %>
    <% end %>
    <%= %>
    
    <% end %>

  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Heading</th>
      <th>Description</th>
      <th>Price</th>
      <th>Location</th>
      <th>Rating</th>
      <th>External url</th>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.heading %></td>
        <td><%= post.description %></td>
        <td><%= post.price %></td>
        <td><%= post.location %></td>
        <td><%= post.rating %></td>
        <td><%= post.external_url %></td>
        <td><%= post.timestamp %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
